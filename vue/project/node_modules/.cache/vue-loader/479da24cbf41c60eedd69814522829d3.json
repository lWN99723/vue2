  <hr>\r\n        <textarea placeholder=\"请输入评论内容(最多吐槽120字)\" maxlength=\"120\" v-model=\"msg\"></textarea>\r\n        <mt-button type=\"primary\" size=\"large\" @click=\"postComment\">发表评论</mt-button>\r\n        <!--评论列表-->\r\n        <div class=\"cmt-list\">\r\n            <div class=\"cmt-item\" v-for=\"(item ,i) in list\" :key=\"item.id\">\r\n                <div class=\"cmt-title\">\r\n                    第{{i+1}}楼&nbsp;&nbsp;用户:{{item.username}}&nbsp;\r\n                    发表时间 {{item.add_time| datetimeFilter}}\r\n                </div>\r\n                <div class=\"cmt-body\">\r\n                    {{item.content}}\r\n                </div>\r\n            </div>\r\n        </div>\r\n        <mt-button type=\"danger\" size=\"large\" @click=\"getMore\">加载更多</mt-button>\r\n    </div>\r\n</template>\r\n<script>\r\n    import {Toast} from \"mint-ui\"\r\n    export default{\r\n        data(){\r\n            return{\r\n                msg:\"\",\r\n                pno:1,//页码默认是一页\r\n                list:[]//保存评论列表的数组\r\n            }\r\n        },\r\n        created(){\r\n            //console.log (\"父组件传递值:\"+this.id);\r\n            this.getComments()\r\n            },\r\n        methods:{\r\n            getComments(){\r\n              var nid=this.id;\r\n              var p=this.pno;\r\n              var url=`commentlist/list?nid=${nid}&pno=${p}`;\r\n              this.$http.get(url).then(result=>{\r\n                  //判断数据获取是否成功\r\n                  if(result.body.code==1){\r\n                      //追加数据\r\n                      //photoList.vue 产品图片\r\n                      //1.创建图片表 t_photo\r\n                      //2.id;title;path\r\n                      //img\\product\\md  5-6添加记录\r\n                      //node.js product/list\r\n                      this.list=this.list.concat(result.body.msg);\r\n                  }else{\r\n                      //失败提示\r\n                      Toast(\"网络故障请检查\");\r\n                  }\r\n              })\r\n            },\r\n            postComment(){\r\n            // 发表评论\r\n            // 1.创建正则表达式验证用户发表的内容\r\n                var m=this.msg.trim();\r\n                if(m.length<3){\r\n                    Toast(\"发表内容必须超过三个字\");\r\n                    return;\r\n                }\r\n            // 2.如果格式不正确 提示\r\n            // 3.发送ajax请求 nid content\r\n                var n=this.id;\r\n                var url=`commentlist/postcomment?nid=${n}&content=${m}&username=lily`\r\n                this.$http.get(url).then(result=>{\r\n                    if(result.body.code==1){\r\n                        Toast(result.body.msg);\r\n                        this.msg='';\r\n                    }\r\n                })\r\n            // 4.判断\r\n            // 5.\r\n            },\r\n            getMore(){\r\n                //加载更多\r\n                //1.当前页加1\r\n                this.pno++;\r\n                //2调用查询\r\n                this.getComments();\r\n            }\r\n        },\r\n        props:[\"id\"]   //声明变量接收父组件的参数\r\n    }\r\n</script>\r\n<style>\r\n    .cmt-container h3{\r\n        font-size: 20px;\r\n    }\r\n    .cmt-container textarea{\r\n        font-size:14px;\r\n        height: 85px;\r\n        margin:0;\r\n    }\r\n    .cmt-container .cmt-list{\r\n        margin:5px 0;\r\n    }\r\n    .cmt-container .cmt-list .cmt-item{\r\n        font-size: 13px;\r\n    }\r\n    .cmt-container .cmt-list .cmt-item .cmt-title{\r\n        line-height: 30px;\r\n        background: #fafafa;\r\n    }\r\n    .cmt-container .cmt-list .cmt-item .cmt-body{\r\n        line-height: 30px;\r\n        text-indent: 2em;\r\n    }\r\n</style>"]}]}